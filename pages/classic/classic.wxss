/* pages/classic/classic.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}
.like-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}
.share-btn{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  padding: 0;
  background: none;
  display: flex;
}
button[class="share-btn"]::after {
  border: 0;
} 
.share{
  width: 40rpx;
  height: 40rpx;
}
.epsoid{
  margin-left: 20rpx;
  margin-top: 4rpx;
}
.nav{
  position: absolute;
  bottom: 40px;
}