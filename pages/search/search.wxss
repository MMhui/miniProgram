/* pages/search/search.wxss */
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  flex: 0 0 68rpx;
  height: 68rpx;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
}
.search-container{
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  margin-left: 20rpx;
}
.icon {
  width: 14px;
  height: 14px;
  margin-left: 12px;
  margin-right: 8px;
}
.search-input{
  width: 500rpx;
  height: 68rpx;
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  font-size: 14px;
}
.placeholder {
  color: #999;
}
.cancel-icon {
  width: 14px;
  height: 14px;
  margin: 0 5px;
}
.cancel {
  line-height: 34px;
  width: 60px;
  text-align: center;
}

.sub-container{
  width: 100%;
  padding-top: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search-data-container{
  width: 690rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 14px;
}
.history{
  margin-bottom: 60rpx;
}
.title {
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  line-height: 30rpx;
  margin-bottom: 14rpx;
}
.chunk {
  width: 10rpx;
  height: 30rpx;
  margin-right: 10px;
  background-color: #000;
}
.tags-container{
  width: 630rpx;
  padding-left: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}
.tags-container tag {
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.tips{
  color: #999;
}

.scroll-view{
  flex: 1;
  width: 100%;
  height: 100%;
  display: flex;
}

.book-container{
  width: 570rpx;
  padding: 20rpx 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}
loading{
  margin: 50rpx 0 50rpx 0;
}
.no-result{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
}