/* pages/my/my.wxss */
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bg{
  width:750rpx;
  height:574rpx;
}
.avatar-position{
  position: absolute; 
  top: 255rpx;
}
.avatar-button{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: none;
  padding: 0;
  background: none;
}
.avatar-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.about-container{
  width: 550rpx;
  padding: 0 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 440rpx;
}
.about-us{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; 
}
.about-us:nth-child(2){
  margin-top: -5rpx;
}
.about-us image{
  width: 34rpx;
  height: 34rpx;
}
.book-num{
  font-size: 36rpx;
  color: #000000;
}
.description{
  font-size:24rpx;
  color:#999999;
}

.like-container{
  width: 100%;
  margin-top: -13rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.headline{
  width: 97rpx;
  height: 42rpx;
  margin-bottom:30rpx;
}
.preview-container{
  display: flex;
  flex-direction: row;
  padding:0 30rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}
.preview{
  margin-bottom: 30rpx;
}

.study{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 40rpx;
  right: 45rpx;
}