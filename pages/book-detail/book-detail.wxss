/* pages/book-detail/book-detail.wxss */
.container{
  width: 100%;
  background-color: #f5f5f5;
}

.header{
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header image{
  width: 200rpx;
  height: 300rpx;
  margin-bottom: 20rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header .title{
  font-size: 38rpx;
  font-weight: 600;
  color: #2f2f2f;
}
.header .author{
  font-size: 28rpx;
  color: #999;
}

.sub-container{
  width: 690rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sub-container:last-child{
  margin-bottom: 0;
}

.sub-container .headline{
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #2f2f2f;
}
.sub-container .no-comment{
  color: #999;
}
.comments-container {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
}
.comments-container > tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15px;
}
.comments-container > tag .num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}
.comments-container tag:first-child > view {
  background-color: #fffbdd;
}

.comments-container tag:nth-child(2) > view {
  background-color: #eefbff;
}

.sub-container .content{
  text-indent: 58rpx;
  font-weight: 500;
  color: #000000;
}

.info-contaner{
  width: 100%;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.info-contaner .row{
  display: flex;
  flex-direction: row;
}
.info-contaner .row .left{
  width: 84rpx;
  color: #999;
  margin-right: 30rpx;
}

.post-container {
  position: fixed;
  bottom: 0;
  width: 690rpx;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #fff;
  box-shadow: 1px -1px 1px #e3e3e3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.like-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}
.share-btn{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
  padding: 0;
  background: none;
  display: flex;
}
button[class="share-btn"]::after {
  border: 0;
}
.share{
  width: 40rpx;
  height: 40rpx;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 460rpx;
  height: 60rpx;
  padding-left: 20rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
}

.posting-container{
  position: fixed;
  bottom: 0;
  z-index: 999;
  width: 100%;
  padding-bottom: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.posting-container .post-header{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.post-header .cancel{
  color: #666;
}
.post-header text{
  padding: 25rpx;
}
.post-header .tips{
  font-size: 28rpx;
  color: #bbb;
}
.posting-container .comments-container{
  width: 690rpx;
  padding: 44rpx 30rpx 10rpx 30rpx;
}
.comment-input{
  width: 630rpx;
  padding: 0 30rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 15px;
  font-size: 22rpx;
}